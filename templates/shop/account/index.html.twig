{% extends 'shop/layout.html.twig' %}

{% block title %}Mon Compte | {{ parent() }}{% endblock %}

{% block content %}
    <div class="ui segment">
        <h1 class="ui dividing header">Mon Compte</h1>
        
        <div class="ui segment">
            <h2 class="ui header">Informations du compte</h2>
            <div class="ui list">
                <div class="item">
                    <i class="user icon"></i>
                    <div class="content">
                        <div class="header">Nom d'utilisateur</div>
                        <div class="description">{{ user.username }}</div>
                    </div>
                </div>
                <div class="item">
                    <i class="mail icon"></i>
                    <div class="content">
                        <div class="header">Email</div>
                        <div class="description">{{ user.email }}</div>
                    </div>
                </div>
                {% if user.customer %}
                    <div class="item">
                        <i class="address card icon"></i>
                        <div class="content">
                            <div class="header">Nom complet</div>
                            <div class="description">{{ user.customer.fullName }}</div>
                        </div>
                    </div>
                    <div class="item">
                        <i class="phone icon"></i>
                        <div class="content">
                            <div class="header">Téléphone</div>
                            <div class="description">{{ user.customer.phoneNumber ?: 'Non renseigné' }}</div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="ui segment">
            <h2 class="ui header">Mes services</h2>
            <div class="ui list">
                <div class="item">
                    <a href="{{ path('app_shop_csc_list') }}" class="ui button primary">
                        <i class="euro sign icon"></i>
                        Mes Compensations Éditeurs (CSC)
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
