{% extends 'base.html.twig' %}

{% block title %}Détail CSC {{ csc.reference }} | {{ parent() }}{% endblock %}

{% block breadcrumb %}
<div class="ui breadcrumb">
    <a href="{{ path('app_shop_account') }}" class="section">Mon Compte</a>
    <i class="right angle icon divider"></i>
    <a href="{{ path('shop_account_csc') }}" class="section">Compensations éditeurs</a>
    <i class="right angle icon divider"></i>
    <div class="active section">{{ csc.reference }}</div>
</div>
{% endblock %}

{% block subcontent %}
<div class="ui segment">
    <div class="ui grid">
        <div class="twelve wide column">
            <h1 class="ui dividing header">
                {{ csc.reference }}
                {% if csc.statut == 'Ouverte' %}
                    <div class="ui green label">Ouverte</div>
                {% elseif csc.statut == 'Clôturée' %}
                    <div class="ui grey label">Clôturée</div>
                {% else %}
                    <div class="ui orange label">{{ csc.statut }}</div>
                {% endif %}
            </h1>
        </div>
        <div class="four wide column">
            <a href="{{ path('shop_account_csc') }}" class="ui labeled icon button">
                <i class="left arrow icon"></i>
                Retour à la liste
            </a>
        </div>
    </div>
    <div class="ui info message">
        <i class="calendar icon"></i>
        <strong>Période :</strong> Du {{ csc.dateDebut|date('d/m/Y') }} au {{ csc.dateFin|date('d/m/Y') }}
    </div>

    <div class="ui segment">
        <h2 class="ui header">Détail des produits</h2>
        <table class="ui celled striped table">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Produit</th>
                    <th class="right aligned">Prix avant</th>
                    <th class="right aligned">Prix après</th>
                    <th class="right aligned">Quantité</th>
                    <th class="right aligned">Économie totale</th>
                </tr>
            </thead>
            <tbody>
                {% set totalEconomie = 0 %}
                {% for produit in csc.produits %}
                    {% set economie = produit.qteClient * (produit.prixAvant - produit.prixApres) %}
                    {% set totalEconomie = totalEconomie + economie %}
                    <tr>
                        <td><strong>{{ produit.reference }}</strong></td>
                        <td>{{ produit.libprod }}</td>
                        <td class="right aligned">{{ produit.prixAvant|number_format(2, ',', ' ') }} €</td>
                        <td class="right aligned"><strong>{{ produit.prixApres|number_format(2, ',', ' ') }} €</strong></td>
                        <td class="right aligned">
                            <div class="ui label">{{ produit.qteClient }}</div>
                        </td>
                        <td class="right aligned">
                            {% if produit.qteClient > 0 %}
                                {% if economie > 0 %}
                                    <div class="ui green label">
                                        {{ economie|number_format(2, ',', ' ') }} €
                                    </div>
                                {% else %}
                                    0,00 €
                                {% endif %}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% if totalEconomie > 0 %}
        <div class="ui positive message">
            <i class="calculator icon"></i>
            <strong>Économie totale : {{ totalEconomie|number_format(2, ',', ' ') }} €</strong>
        </div>
    {% endif %}
</div>
{% endblock %}
